<h1 class="text-2xl font-bold mb-4">New Message to <%= @receiver.email %></h1>
<div class="max-w-2xl mx-auto">
  <%= simple_form_for @message, url: messages_path do |f| %>
    <%= f.hidden_field :receiver_id, value: @receiver.id %>
    <div class="mb-4">
      <%= f.input :content, input_html: { class: 'w-full p-2 border rounded-lg' }, label: "Message" %>
    </div>
    <div>
      <%= f.button :submit, "Send Message", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
