<div id="<%= dom_id post %>" class="relative bg-white shadow-lg overflow-hidden rounded-xl mb-4">
  <% if post.image.attached? %>
     <div class="relative pb-[56.25%]"> <!-- 16:9 Aspect Ratio -->
      <%= image_tag post.image, class: "absolute inset-0 w-full h-full object-cover rounded-t-xl" %>
    </div>
  <% else %>
    <div class="relative pb-[56.25%] bg-gray-100 rounded-t-xl"></div>
  <% end %>
  <div class="p-6">
    <h1 class="text-2xl mb-2 font-semibold"><%= post.content %></h1>
    <p class="text-gray-600"><%= post.user.email %></p>
  </div>

</div>
