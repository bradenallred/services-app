<%= form_with(model: post, local: true, class: "space-y-6") do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-100 text-red-700 p-4 rounded-md">
      <h2 class="font-bold text-lg"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul class="list-disc list-inside">
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-2">
    <%= form.label :job_title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :job_title, class: "mt-1 block w-full p-2.5 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>
  <div class="space-y-2">
    <%= form.label :job_description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :job_description, class: "mt-1 block w-full p-2.5 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="space-y-2 hidden">
    <%= form.label :user_id, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :user_id, class: "mt-1 block w-full p-2.5 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

<div>
  <%= form.label :images, "Upload Images" %>
  <%= form.file_field :images, multiple: true %>
<div>

  <div>
    <%= form.label :category, "Select Category", style: "display: block" %>
    <%= form.select :category, options_for_select(Post::CATEGORIES), prompt: "Choose a category" %>
  </div>

  <div>
    <%= form.submit "Submit", class: "w-full inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>
